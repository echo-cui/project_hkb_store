<div class="operation_tab">

    <div class="hkb_alignment_left">

        <label>
            <input class="radio all_check" type="checkbox"><span>全选</span>
        </label>

    </div>

    <a class="operation_btn" href="#">删除</a>

</div>





<script>


    //点击全选时，全部选中，反之全部不选中
    var singleChecked=document.getElementsByClassName('single_checked');  //单个

    var shoppingCartChecked=document.getElementsByClassName('all_check')[0]; //全选

    shoppingCartChecked.addEventListener('click',function () {

        if (shoppingCartChecked.checked == true) {

            for (var i=0;i<singleChecked.length;i++) {

                singleChecked[i].checked = true;

            }

        }else {

            for (var i=0;i<singleChecked.length;i++) {

                singleChecked[i].checked = false;

            }

        }

    },false)

    for (var i=0;i<singleChecked.length;i++) {

        singleChecked[i].addEventListener('click',function () {

            var appSingle=mySing()

            function mySing() {

                for (var i=0;i<singleChecked.length;i++) {

                    if (singleChecked[i].checked == false) {

                        return false;

                    }

                }

                return true;

            }

            if (appSingle == false) {

                shoppingCartChecked.checked = false;

            }

            if (appSingle == true) {

                shoppingCartChecked.checked = true;

            }


        },false)

    }

    hkbProductDetails.volumeChange(false)


</script>

